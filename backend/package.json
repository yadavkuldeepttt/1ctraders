{
  "name": "irma-backend",
  "version": "1.0.0",
  "description": "IRMA Investment Platform Backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "seed:tasks": "ts-node src/scripts/seedTasks.ts"
